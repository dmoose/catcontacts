<p id="notice"><%= notice %></p>

<h1>Listing Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Aline1</th>
      <th>Aline2</th>
      <th>Aline2</th>
      <th>City</th>
      <th>Region</th>
      <th>Postal</th>
      <th>County</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.aline1 %></td>
        <td><%= address.aline2 %></td>
        <td><%= address.aline2 %></td>
        <td><%= address.city %></td>
        <td><%= address.region %></td>
        <td><%= address.postal %></td>
        <td><%= address.county %></td>
        <td><%= address.country %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

